<odoo>

    <!-- ===================== -->
    <!-- BOOK list VIEW -->
    <!-- ===================== -->
    <record id="view_book_list" model="ir.ui.view">
        <field name="name">book.management.list</field>
        <field name="model">book.management</field>
        <field name="arch" type="xml">
            <list>
                <field name="book_id"/>
                <field name="book_title"/>
                <field name="book_author"/>
                <field name="book_rating"/>
            </list>
        </field>
    </record>

    <!-- ===================== -->
    <!-- BOOK FORM VIEW -->
    <!-- ===================== -->
    <record id="view_book_form" model="ir.ui.view">
        <field name="name">book.management.form</field>
        <field name="model">book.management</field>
        <field name="arch" type="xml">
            <form string="Book">
                <sheet>

                    <group>
                        <field name="book_id"/>
                        <field name="book_title"/>
                        <field name="book_author"/>
                        <field name="book_rating"/>
                    </group>

                    <group string="Tags">
                        <!-- GENRE TAGS -->
                        <field name="book_genre_ids"
                               widget="many2many_tags"
                               options="{'color_field': 'color'}"/>

                        <!-- REVIEW TAGS -->
                        <field name="book_review_ids"
                               widget="many2many_tags"
                               options="{'color_field': 'color'}"
                               readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="book_description"/>
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>

</odoo>
