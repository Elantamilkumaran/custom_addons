<odoo>

    <record id="view_book_confirm_wizard_form" model="ir.ui.view">
        <field name="name">book.confirm.wizard.form</field>
        <field name="model">book.confirm.wizard</field>
        <field name="arch" type="xml">
            <form string="Confirm Status Change">
                <group>
                    <field name="book_id" readonly="1"/>
                    <field name="direction" readonly="1"/>
                </group>

                <footer>
                    <button name="action_confirm"
                            string="Confirm"
                            type="object"
                            class="btn-primary"/>

                    <button string="Cancel"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>
